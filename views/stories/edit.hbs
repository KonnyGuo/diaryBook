<h3> Edit Diary </h3>

<div class="row">
    <form action="/stories/{{story._id}}" method="POST" class="col s12">
        {{!-- for method override, grabbing method in var and disregarding it and pass it elsewhere --}}
        <input type="hidden" name="_method" value="PUT">
            <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title" value="{{story.title}}">
                <label for="title"> Title </label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                {{!-- creates a dropdown option --}}
                <select name="status" id="status">
                    {{#select story.status}}
                    {{!-- public is selected bc its default selection --}}
                    <option value="public" selected> Public </option>
                    <option value="private"> Private </option>
                    {{/select}}
                </select>
                <label for="status"> Status </label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5> Write your diary </h5>
                <textarea name="body" id="body"> {{story.body}} </textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange"> Cancel </a>
        </div>
    </form>
</div>