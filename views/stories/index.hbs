<h1> Diaries </h1>

<div class="row">
    {{#each stories }}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{!-- edit icon --}}
                </div>

                <div class="card-content center-align">
                    {{!-- take out extra html and body --}}
                    <h5> {{title}} </h5>
                    {{!-- strip Html tags then truncate body to 150 words characters long --}}
                    <p> {{stripTags (truncate body 150)}} </p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="">
                        <a href="/stories/user/{{user._id}}"> {{user.displayName}} </a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/stories/{{_id}}" class="btn grey"> Read More </a>
                </div>
            </div>
        </div>
    {{else}}
        <p> No diaries to display </p>
    {{/each}}

</div>